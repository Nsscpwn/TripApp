@model Trip.Models.LogIn
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <div class="jumbotron">
        <h3><b>Login</b></h3>
        <form action="Admin" method="post">
            <table>
                <tr>
                    <td>Username: </td>
                    <td><input type="text" name="usernameID" /></td>
                </tr>
                <tr>
                    <td>Password: </td>
                    <td><input type="password" name="passwordID" /></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" value="Login" /></td>
                </tr>
            </table>
        </form>
        <hr />
    </div>
</div>

