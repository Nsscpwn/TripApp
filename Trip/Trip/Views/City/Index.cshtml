@model Trip.Models.Details
@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid" id="formSearch">
    <form action="~/City/City" method="post">
        <div class="row">
            <div class="col-md-3" id="colSearchTitle">
                <label for="inputCity" id="SearchTitle">@Model.PopUps.City_not_found</label>
            </div>
            <div class="col-md-6">
                <input type="text" class="form-control" id="inputCity" name="searchID" placeholder="Where are u going?">
            </div>
            <div class="col-md-3">
                <input type="submit" class="btn btn-primary" id="btnSearch" value="Search">
            </div>
        </div>
    </form>

    <div class="row" id="rowrecommender">
        <div class="col-md-5">
            <hr />
        </div>
        <div class="col-md-2">
            <p id="recommended">Recommended</p>
        </div>
        <div class="col-md-5">
            <hr />
        </div>
    </div>

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">
                <img class="d-block w-100" src="~/Content/CityImages/@Model.Lists.random3Images()[0].Image_URL" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <p>@Html.ActionLink(Model.Lists.random3Images()[0].Image_Name, "../City/CityList", new { id = Model.Lists.random3Images()[0].Image_City }, new { @class = "citycarousel" })</p>
                </div>
            </div>
            <div class="item">
                <img class="d-block w-100" src="~/Content/CityImages/@Model.Lists.random3Images()[1].Image_URL" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <p>@Html.ActionLink(Model.Lists.random3Images()[1].Image_Name, "../City/CityList", new { id = Model.Lists.random3Images()[1].Image_City }, new { @class = "citycarousel" })</p>
                </div>
            </div>
            <div class="item">
                <img class="d-block w-100" src="~/Content/CityImages/@Model.Lists.random3Images()[2].Image_URL" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <p>@Html.ActionLink(Model.Lists.random3Images()[2].Image_Name, "../City/CityList", new { id = Model.Lists.random3Images()[2].Image_City }, new { @class = "citycarousel" })</p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#carouselExampleSlidesOnly" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carouselExampleSlidesOnly" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>




