@model  List<Trip.Models.Cities>
@{
    ViewBag.Title = "DeleteCity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">City Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var oras in Model)
        {
            using (@Html.BeginForm("DeleteCity", "City", new { id =oras.CityID  }))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => oras.CityID)
                    </td>
                    <td>
                        @Html.DisplayFor(m => oras.City_Name)
                    </td>
                    <td>
                        <input class="btn btn-primary" type="submit" value="Delete" />
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

